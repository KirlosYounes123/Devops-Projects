[Unit]
Description=Apache Tomcat Web Application Container
After=network.target
[Service]
Type=forking
User=tomcat
Group=tomcat
Environment="JAVA_HOME="/opt/jdk-22.0.2"
Environment="CATALINA_HOME=/opt/apache-tomcat-9.0.93"
Environment="CATALINA_PID=/opt/apache-tomcat-9.0.93/temp/tomcat.pid"
Environment="CATALINA_OPTS=-Xms512M -Xmx1024M -server -XX:+UseParallelGC"
ExecStart=/opt/apache-tomcat-9.0.93/bin/startup.sh
ExecStop=/opt/apache-tomcat-9.0.93/bin/shutdown.sh
[Install]
WantedBy=multi-user.target


